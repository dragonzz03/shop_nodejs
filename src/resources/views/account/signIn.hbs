<div class="container login-container">
  <form method="POST" action="/account/signInProcess">
    <div class="login-form-2" >
      <h3>Login</h3>           
      <div class="form-group">
          <input type="text" class="form-control" placeholder="Your account *" id="inputAccountName" name="accountName"/>
      </div>
      <div class="form-group">
          <input type="password" class="form-control" placeholder="Your Password *" id="inputPassword" name="password"/>
      </div>
      <div class="form-group">
          <input type="submit" class="btnSubmit" value="Login" />
      </div>
      <div class="form-group">
          <a href="#" class="ForgetPwd" value="Login">Forget Password?</a>
      </div>
    </div> 
  </form>
</div>
  {{#if alert}}
      <div class="alert alert{{type}}" role="alert">
        {{message}} - <a href={{href}}>{{atag}}</a>
      </div>
  {{/if}}



    