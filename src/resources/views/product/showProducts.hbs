<div class="mt-4">
  <h3 style="text-transform: capitalize;">{{productType}}</h3>
  <div class="row">
    {{#each product}}
      <div class="col-sm-6 col-lg-4 mt-4">
        <div class="card">
          <a href="productDetails/{{this._id}}">
            <img src="{{this.image}}" class="card-img-top showProduct" alt="..." data-id="{{this.name}}"/>
          </a>
          <div class="card-body">
            <h5 class="card-title">{{this.name}}</h5>
            <p class="card-text">Quantity: {{this.quantity}}</p>
            {{#times this.evaluate}}
              <i class="bi bi-star-fill star-evaluate"></i>
            {{/times}}
            <p class="card-text">Price: <strong>{{this.price}} $</strong></p>       
          </div>
        </div>
      </div>
      {{else}}
      <h2 class="text-center">There are no products posted</h2  >
    {{/each}}  
  </div>
</div>