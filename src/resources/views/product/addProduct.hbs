<div class="wraper mt-4" >
    <div class="row">
        <form action="/product/addProductSuccess" id="addProductForm" method="POST">
            <div class="col-lg-12 col-md-12 col-sm-12 mx-auto" id="addProductContainer">
                <div class="mb-3">
                    <label for="nameProduct" class="form-label">Name Product</label>
                    <input type="text" name="name" class="form-control" id="nameProduct" placeholder="Enter name product" required>
                </div>
                <div class="mb-3">
                    <label for="imageProduct" class="form-label">Image Product</label>
                    <input type="text" name="image" class="form-control" id="imageProduct" placeholder="Enter image product" required>
                </div>
                <div class="mb-3">
                    <label for="quantityProduct" class="form-label">Quantity Product</label>
                    <input type="number" name="quantity" class="form-control" id="quantityProduct" min="0" placeholder="Enter quantity product" required>
                </div>
                <div class="mb-3">
                    <label for="priceProduct" class="form-label">Price Product</label>
                    <input type="number" name="price" class="form-control" id="priceProduct" min="0" placeholder="Enter price product" required>
                </div>
                <div class="mb-3">
                    <label for="targetAgeProduct" class="form-label">Target Age</label>
                    <input type="number" name="targetAge" class="form-control" id="targetAgeProduct" min="0" placeholder="Enter target age of product" required>
                </div>
                <div class="mb-3">
                    <label for="targetGender" class="form-label">Target gender of Product</label>
                    <select class="form-select" name="targetGender" id="targetGender" required>
                        <option>Please select target gender of Product</option>
                        <option value="male">Male</option>
                        <option value="female">Female</option>
                        <option value="other">Other</option>
                    </select>
                </div>
                <div class="mb-3">
                    <label for="typeProduct" class="form-label">Name Product</label>
                    <select class="form-select" aria-label="Default select" id="typeProduct" name="type" required>
                        <option>Please select category</option>
                        {{#each type}}
                            <option value="{{this.name}}">{{this.name}}</option>
                        {{/each}}
                    </select>
                </div>
                <div class="mb-3">
                    <label for="descriptionProduct" class="form-label">Description product</label>
                    <textarea class="form-control" name="description" id="descriptionProduct" rows="3"placeholder="Description your product" required></textarea>
                </div>
                <div class="btn"><button class="btn btn-primary" type="submit">POST</button></div>
            </div>
        </form>
    </div>
</div>